{
  "version": 2,
  "name": "eon-xrp",
  "builds": [
    { 
      "src": "frontend/package.json", 
      "use": "@vercel/next" 
    }
  ],
  "routes": [
    { 
      "src": "/(.*)", 
      "dest": "frontend/$1" 
    }
  ],
  "env": {
    "NEXT_PUBLIC_API_URL": "@eon_xrp_api_url",
    "NEXT_PUBLIC_XRPL_NETWORK": "testnet"
  }
}
